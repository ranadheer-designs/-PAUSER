{
  "extends": "../../tsconfig.base.json",
  "compilerOptions": {
    "plugins": [
      {
        "name": "next"
      }
    ],
    "paths": {
      "@/*": [
        "./src/*"
      ],
      "@pauser/common": [
        "../../packages/common/src/index.ts"
      ],
      "@pauser/common/server": [
        "../../packages/common/src/server.ts"
      ],
      "@pauser/ui": [
        "../../packages/ui/src/index.ts"
      ]
    },
    "jsx": "preserve",
    "noEmit": true,
    "allowJs": true,
    "incremental": true
  },
  "include": [
    "next-env.d.ts",
    "**/*.ts",
    "**/*.tsx",
    ".next/types/**/*.ts"
  ],
  "exclude": [
    "node_modules"
  ]
}