{
  "name": "@pauser/common",
  "version": "0.1.0",
  "private": true,
  "description": "Shared types, SRS algorithm, and challenge engine for Pauser",
  "main": "./src/index.ts",
  "types": "./src/index.ts",
  "exports": {
    ".": "./src/index.ts",
    "./server": "./src/server.ts"
  },
  "scripts": {
    "build": "tsup src/index.ts src/server.ts --format cjs,esm --dts --clean",
    "dev": "tsup src/index.ts src/server.ts --format cjs,esm --dts --watch",
    "lint": "eslint src --ext .ts,.tsx",
    "lint:fix": "eslint src --ext .ts,.tsx --fix",
    "typecheck": "tsc --noEmit",
    "clean": "rimraf dist",
    "test": "vitest run",
    "test:watch": "vitest"
  },
  "devDependencies": {
    "tsup": "^8.0.1",
    "vitest": "^1.2.0"
  },
  "dependencies": {
    "@supabase/supabase-js": "^2.90.1",
    "zod": "^4.3.5"
  }
}
